<% if @results && @results.length == 0 %>
  <h3>No Results Found, Please Try Another Search</h3>
<% elsif @results && @results.length > 0 %>
  <h3>Results:</h3>
  <% @results.each do |result| %>
    <div id="result" class="card text-black bg-warning mb-3" style="text-align:center; height:auto; max-width:15rem;">
      <div id="title" style="padding-top:20px;">
        <%= link_to "#{result[:title]}", movie_path(result[:id]), class: "btn btn-info btn-outline-secondary" %>
      </div>
      <p id="vote_average">Vote Average: <%= result[:vote_average] %></p>
    </div>
  <% end %>
<% end %>
