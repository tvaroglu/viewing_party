<% if @results && @results.length == 0 %>
  <h3>No Results Found, Please Try Another Search</h3>
<% elsif @results && @results.length > 0 %>
  <h3>Search Results:</h3>
  <% @results.each do |result| %>
    <div id="result" class="card text-black bg-warning mb-3" style="text-align:center; height:auto; max-width:15rem;">
      <!-- Placeholder for path helper - need to add in real route when page is built -->
      <p id="movie-<%= result[:id] %>" style="padding-top:20px;">Title: <%= link_to "#{result[:title]}", movie_path(current_user.id) %></p>
      <p>Vote Average: <%= result[:vote_average] %></p>
    </div>
  <% end %>
<% end %>
