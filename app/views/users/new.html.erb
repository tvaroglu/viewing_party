<h3>New User Registration</h3>
<%= form_with model: @user, local: true do |form| %>
  <%= form.label :email, 'Email:' %>
  <br>
  <%= form.text_field :email, id: :email %>
  <br>
  <%= form.label :password, 'Password:' %>
  <br>
  <%= form.password_field :password, id: :password %>
  <br>
  <%= form.label :password_confirmation, 'Confirm Password:' %>
  <br>
  <%= form.password_field :password_confirmation, id: :password_confirmation %>
  <br><br>
  <%= form.submit 'Register User', class: "btn btn-info btn-sm btn-outline-dark" %>
<% end %>
